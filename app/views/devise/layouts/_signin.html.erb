<div class="well">
  <h2>Sign in</h2>
  <%= form_for(resource, html: {role:"form"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, :autofocus => true, class:"form-control", placeholder:"Enter email " %>
    </div>
    <div class="form-group">
    <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class:"forgot-pass" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in", class:"btn btn-default btn-small" %></div>
  <% end %>

</div>
